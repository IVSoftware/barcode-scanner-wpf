<Window x:Class="barcode_scanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:barcode_scanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Margin="5" Background="AliceBlue" />
        <Button Grid.Row="1" Content="Button" Margin="5"/>
        <ComboBox Grid.Row="2" Margin="5">
            <ComboBoxItem Content="Item 1"/>
            <ComboBoxItem Content="Item 2"/>
        </ComboBox>
        <CheckBox Grid.Row="3" Content="CheckBox" Margin="5"/>
        <RadioButton Grid.Row="4" Content="RadioButton" Margin="5"/>
        <Label Grid.Row="5" Content="Label" Margin="5"/>
    </Grid>
</Window>
